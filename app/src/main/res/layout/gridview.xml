<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/gridCardMargin"
    app:cardCornerRadius="@dimen/gridCardCornerRadius"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_card_background">
    <TextView
        android:id="@+id/tvStateGrid"
        style="@style/gridTextView" />

    <TextView
        android:id="@+id/tvTimeStampGrid"
        style="@style/gridTextView"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>