<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/color_card_background"
        app:cardCornerRadius="@dimen/listCardCornerRadius"
        style="@style/listCardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tvState"
                android:text="@string/onCreate"
                style="@style/listTextView" />

            <TextView
                android:id="@+id/tvTimeStamp"
                android:text=""
                android:layout_toRightOf="@id/tvState"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/tvState"
                android:gravity="end"
                style="@style/listTextView"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/listTextSizeDescription"
        android:padding="10dp" />
</LinearLayout>